<h1>My article </h1>
<br>
<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

 <%= link_to articles_path, class:"btn btn-light" do %>
 <i class="fa-solid fa-house"></i>
 <% end %>

<%= link_to edit_article_path, class:"btn btn-light" do %>
<i class="fa-solid fa-pen"></i>
<% end %>

<%= link_to article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class:"btn btn-light" do%>
<i class="fa-solid fa-trash"></i>
<% end %>
